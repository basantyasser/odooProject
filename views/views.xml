<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="cert_ring_list">
            <field name="name">certificate</field>
            <field name="model">print_certificate</field>
            <field name="arch" type="xml">
                <tree string="Certificate" sample="1">
                   <field name="name"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="cert_ring_form">
            <field name="name">certificate</field>
            <field name="model">print_certificate</field>
            <field name="arch" type="xml">
                <form string="Certificate">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="template"/>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="cert_employee">
            <field name="name">Certificate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">print_certificate</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create first Certificate content!
                </p>
            </field>

        </record>

        <menuitem name="Certificate" id="cert_menu_list" parent="hr.menu_hr_root" action="cert_employee"
        />
    </data>
</odoo>