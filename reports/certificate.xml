<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="report_certificate_view"
                model="hr.employee"
                string='Print Certificate'
                name="print_certificate.certificate_report"
                file="print_certificate.certificate_report"
                report_type="qweb-pdf"/>

        <template id="certificate_report">
            <t t-call="web.external_layout">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="doc">
                        <h2 align="center">Certificate</h2>
                        <br></br>
                        <div class="page">
                            <table class="table">
                                <div class="oe_structure">
                                    <div class="row">
                                        <div class="col-1"></div>
                                        <div class="col-7">
                                            <strong>Name</strong>
                                            :
                                            <t t-esc="doc.name"/>
                                        </div>
                                        <div class="col-4">
                                            <strong>Given By</strong>
                                            :
                                            <t t-esc="doc.coach_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-1"></div>
                                        <div class="col-7">
                                            <strong>Reg No</strong>
                                            :

                                        </div>
                                        <div class="col-4">
                                            <strong>Date</strong>
                                            :
                                              <t t-esc="doc.coach_id.first_contract_date"/>
                                        </div>
                                    </div>
                                    <h1 style="font-weight:20px"><hr></hr></h1>
                                     <t t-raw="doc.cer"/>
                                </div>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>